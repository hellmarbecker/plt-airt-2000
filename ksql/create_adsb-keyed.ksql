--
-- CSV based stream on top of raw topic
--
CREATE STREAM adsb_raw (
    mt      VARCHAR,
    tt      VARCHAR,
    sid     VARCHAR,
    aid     VARCHAR,
    hex     VARCHAR,
    fid     VARCHAR,
    dmg     VARCHAR,
    tmg     VARCHAR,
    dml     VARCHAR,
    tml     VARCHAR,
    cs      VARCHAR,
    alt     VARCHAR,
    gs      VARCHAR,
    trk     VARCHAR,
    lat     VARCHAR,
    lng     VARCHAR,
    vr      VARCHAR,
    sq      VARCHAR,
    alrt    VARCHAR,
    emer    VARCHAR,
    spi     VARCHAR,
    gnd     VARCHAR
)
WITH (
    KAFKA_TOPIC='adsb-raw',
    VALUE_FORMAT='DELIMITED'
);

--
-- Apply SBS1 schema
-- Use HEX field as key
-- Use generation time as timestamp field for purposes of KSQL
-- Transform to AVRO
--
CREATE STREAM adsb_keyed
WITH (
    TIMESTAMP='ts_generated',
    TIMESTAMP_FORMAT='yyyy/MM/dd HH:mm:ss.SSS',
    VALUE_FORMAT='AVRO'
) 
AS 
SELECT
    mt,
    tt,
    sid,
    aid,
    hex,
    fid,
    dmg + ' ' + tmg AS ts_generated,
    dml + ' ' + tml AS ts_logged,
    cs,
    alt,
    gs,
    trk,
    lat,
    lng,
    vr,
    sq,
    alrt,
    emer,
    spi,
    gnd
FROM
    adsb_raw
EMIT CHANGES
PARTITION BY
    hex;

--
-- Example 1:
-- Count number of data points per flight in a 5 second tumbling window
--
create table adsb_counts_5sec as
select
    windowstart(),
    hex,
    count(*)
from
    adsb_keyed
window tumbling ( size 5 seconds )
group by
    hex
emit changes;
